<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cms549.connectfour.HomeScreen">

    <Button
        android:text="One Player"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bone"
        android:background="@android:color/holo_orange_light"
        android:onClick="goToChooseLevel"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginStart="14dp" />

    <Button
        android:text="Two Players"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btwo"
        android:onClick="goToChooseChip"
        android:background="@android:color/holo_orange_light"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/bone"
        android:layout_alignBottom="@+id/bone"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="My Stats"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bstat"
        android:onClick="goToAccount"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/btwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Four"
        android:id="@+id/title"
        android:fontFamily="sans-serif"
        android:textSize="55sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/btwo"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
